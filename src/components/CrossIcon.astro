---
interface Props {
  size?: number;
  class?: string;
}

const { size = 24, class: className = '' } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="currentColor"
  width={size}
  height={size}
  class:list={['pixel-icon-svg', className]}
  aria-hidden="true"
>
  <!-- Pixel art cross matching pixelarticons style -->
  <path d="M10 2h4v6h6v4h-6v10h-4V12H4V8h6V2z" />
</svg>

<style>
  .pixel-icon-svg {
    display: inline-block;
    vertical-align: middle;
  }
</style>
