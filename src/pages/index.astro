<script>
  const jamStart = new Date('2026-02-07T18:00:00-06:00');
  const jamEnd = new Date('2026-02-14T18:00:00-06:00');

  // Update submit button state based on time
  function updateSubmitButton() {
    const now = Date.now();
    const btn = document.getElementById('submit-game-btn');
    if (!btn) return;

    const startTime = jamStart.getTime();
    const endTime = jamEnd.getTime();

    if (now < startTime) {
      // Before jam - locked
      btn.classList.remove('cta-button-open', 'cta-button-closed');
      btn.classList.add('cta-button-locked');
    } else if (now >= startTime && now <= endTime) {
      // During jam - open!
      btn.classList.remove('cta-button-locked', 'cta-button-closed');
      btn.classList.add('cta-button-open');
    } else {
      // After jam - closed
      btn.classList.remove('cta-button-locked', 'cta-button-open');
      btn.classList.add('cta-button-closed');
    }
  }

  updateSubmitButton();
  setInterval(updateSubmitButton, 1000);

  function updateCountdown() {
    const now = new Date();
    const diff = jamStart.getTime() - now.getTime();

    if (diff <= 0) {
      document.getElementById('countdown')!.innerHTML = '<p style="font-size: 1.5rem; color: var(--color-accent); font-weight: 600;">The jam has begun!</p>';
      return;
    }

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((diff % (1000 * 60)) / 1000);

    document.getElementById('days')!.textContent = days.toString().padStart(2, '0');
    document.getElementById('hours')!.textContent = hours.toString().padStart(2, '0');
    document.getElementById('minutes')!.textContent = minutes.toString().padStart(2, '0');
    document.getElementById('seconds')!.textContent = seconds.toString().padStart(2, '0');
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);

  // Sound Toggle
  const audio = document.getElementById('jam-music') as HTMLAudioElement;
  const soundToggle = document.getElementById('sound-toggle')!;
  const soundContainer = soundToggle.parentElement!;

  soundToggle.addEventListener('click', () => {
    if (audio.paused) {
      // First click - start playing unmuted
      audio.muted = false;
      audio.play();
      soundToggle.classList.remove('muted');
      soundContainer.classList.add('playing');
    } else if (audio.muted) {
      // Currently muted - unmute
      audio.muted = false;
      soundToggle.classList.remove('muted');
    } else {
      // Currently playing - mute
      audio.muted = true;
      soundToggle.classList.add('muted');
    }
  });
</script>
