<style>
  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    background: linear-gradient(135deg, var(--color-blue) 0%, var(--color-purple) 25%, var(--color-red) 50%, var(--color-purple) 75%, var(--color-blue) 100%);
    background-size: 400% 400%;
    animation: gradient-shift 15s ease infinite;
    position: relative;
    overflow: hidden;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Scrolling Background */
  .scrolling-bg {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
    opacity: 0.25;
    pointer-events: none;
    z-index: 0;
  }

  .scroll-row {
    overflow: hidden;
    width: 100%;
  }

  .scroll-track {
    display: flex;
    width: max-content;
  }

  .image-group {
    display: flex;
    gap: 1rem;
    padding-right: 1rem;
  }

  .scroll-track img {
    height: 120px;
    min-width: 120px;
    width: auto;
    border-radius: 8px;
    object-fit: cover;
    flex-shrink: 0;
  }

  .scroll-left .scroll-track {
    animation: scroll-left 60s linear infinite;
  }

  .scroll-right .scroll-track {
    animation: scroll-right 60s linear infinite;
  }

  .scroll-row.slow .scroll-track {
    animation-duration: 80s;
  }

  @keyframes scroll-left {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.333%); }
  }

  @keyframes scroll-right {
    0% { transform: translateX(-33.333%); }
    100% { transform: translateX(0); }
  }

  .hero-content {
    max-width: var(--max-width);
    position: relative;
    z-index: 1;
    background: rgba(250, 250, 249, 0.95);
    padding: 3rem;
    border-radius: 24px;
    backdrop-filter: blur(12px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(255, 255, 255, 0.2);
    overflow: hidden;
  }

  .hero-content::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 40%,
      rgba(255, 255, 255, 0.3) 50%,
      transparent 60%
    );
    animation: shimmer 8s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%) rotate(0deg); }
    100% { transform: translateX(100%) rotate(0deg); }
  }

  .hero-logo {
    width: 120px;
    height: 120px;
    object-fit: contain;
    display: block;
    margin: 0 auto 1.5rem;
    animation: float 3s ease-in-out infinite;
    border-radius: 12px;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(-2deg); }
    50% { transform: translateY(-10px) rotate(2deg); }
  }

  .hero h1 {
    font-family: var(--font-pixel);
    font-size: clamp(1.2rem, 4vw, 2rem);
    font-weight: 400;
    margin-bottom: 1.5rem;
    letter-spacing: 0;
    line-height: 1.4;
    background: linear-gradient(135deg, var(--color-blue) 0%, var(--color-purple) 40%, var(--color-red) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 3px 3px 0 rgba(0, 0, 0, 0.1);
  }

  .tagline {
    font-size: clamp(1.1rem, 3vw, 1.35rem);
    color: var(--color-text-muted);
    margin-bottom: 3rem;
    font-style: italic;
  }

  /* Countdown */
  .countdown {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .countdown-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 70px;
  }

  .countdown-value {
    font-family: var(--font-pixel);
    font-size: clamp(1.2rem, 4vw, 1.8rem);
    font-weight: 400;
    line-height: 1;
    background: linear-gradient(135deg, var(--color-blue) 0%, var(--color-purple) 50%, var(--color-red) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .countdown-label {
    font-family: var(--font-pixel);
    font-size: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0;
    color: var(--color-text-muted);
    margin-top: 0.75rem;
  }

  .countdown-item {
    background: rgba(255, 255, 255, 0.5);
    padding: 1rem;
    border-radius: 12px;
    min-width: 80px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: default;
