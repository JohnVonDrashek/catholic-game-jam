<style>
  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    background: linear-gradient(135deg, var(--color-blue) 0%, var(--color-purple) 25%, var(--color-red) 50%, var(--color-purple) 75%, var(--color-blue) 100%);
    background-size: 400% 400%;
    animation: gradient-shift 15s ease infinite;
    position: relative;
    overflow: hidden;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Scrolling Background */
  .scrolling-bg {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
    opacity: 0.25;
    pointer-events: none;
    z-index: 0;
  }

  .scroll-row {
    overflow: hidden;
    width: 100%;
  }

  .scroll-track {
    display: flex;
    width: max-content;
  }

  .image-group {
    display: flex;
    gap: 1rem;
    padding-right: 1rem;
  }

  .scroll-track img {
    height: 120px;
    min-width: 120px;
    width: auto;
    border-radius: 8px;
    object-fit: cover;
    flex-shrink: 0;
  }

  .scroll-left .scroll-track {
    animation: scroll-left 60s linear infinite;
  }

  .scroll-right .scroll-track {
    animation: scroll-right 60s linear infinite;
  }

  .scroll-row.slow .scroll-track {
    animation-duration: 80s;
  }

  @keyframes scroll-left {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.333%); }
  }

  @keyframes scroll-right {
    0% { transform: translateX(-33.333%); }
    100% { transform: translateX(0); }
  }

  /* Sound Toggle Button */
  .sound-toggle {
    position: absolute;
    top: 1rem;
    left: 1rem;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.9);
    border: 3px solid var(--color-text);
    border-radius: 0;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    z-index: 10;
    transition: all 0.1s ease;
    box-shadow:
      inset -2px -2px 0 0 #AAAAAA,
      inset 2px 2px 0 0 #FFFFFF;
  }

  .sound-toggle:hover {
    background: rgba(255, 255, 255, 1);
    transform: scale(1.05);
  }

  .sound-toggle:active {
    transform: scale(0.95);
