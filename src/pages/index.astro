<style>
  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    background: linear-gradient(180deg, var(--color-bg) 0%, #F5F5F4 100%);
    position: relative;
    overflow: hidden;
  }

  /* Scrolling Background */
  .scrolling-bg {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
    opacity: 0.15;
    pointer-events: none;
    z-index: 0;
  }

  .scroll-row {
    overflow: hidden;
    width: 100%;
  }

  .scroll-track {
    display: flex;
    gap: 1rem;
    width: max-content;
  }

  .scroll-track img {
    height: 120px;
    width: auto;
    border-radius: 8px;
    object-fit: cover;
    flex-shrink: 0;
  }

  .scroll-left .scroll-track {
    animation: scroll-left 60s linear infinite;
  }

  .scroll-right .scroll-track {
    animation: scroll-right 60s linear infinite;
  }

  .scroll-row.slow .scroll-track {
    animation-duration: 80s;
  }

  @keyframes scroll-left {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @keyframes scroll-right {
    0% { transform: translateX(-50%); }
    100% { transform: translateX(0); }
  }

  .hero-content {
    max-width: var(--max-width);
