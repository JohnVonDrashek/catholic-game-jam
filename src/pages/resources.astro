---
import Layout from '../layouts/Layout.astro';
import Icon from '../components/Icon.astro';
import CrossIcon from '../components/CrossIcon.astro';
---

<Layout title="Resources | Catholic Game Jam">
  <main class="resources-page">
    <!-- Header -->
    <section class="resources-hero">
      <div class="container">
        <a href="/" class="back-link">← Back to Home</a>
        <h1>Resource Pack</h1>
        <p class="tagline">Everything you need to start your quest. Free tools, assets, and tutorials to help you build something awesome.</p>
      </div>
    </section>

    <!-- Game Engines -->
    <section class="section" id="engines">
      <div class="container">
        <h2>Game Engines</h2>
        <p class="section-intro">Choose your weapon. All of these are free and beginner-friendly.</p>

        <div class="resource-category">
          <h3 class="category-title beginner">Beginner Friendly</h3>
          <div class="resource-grid">
            <a href="https://www.renpy.org/" target="_blank" rel="noopener noreferrer" class="resource-card">
              <div class="card-header">
                <span class="resource-logo resource-logo-svg" style="background: #FF7F7F;">
